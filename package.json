    "eslint": "^8.53.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "nuxt": "^3.8.1",
    "typescript": "^5.2.2",
    "vue": "^3.3.8",
    "vue-router": "^4.2.5",
    "vue-tsc": "^1.8.22"
  },
  "lint-staged": {
    "*.{vue,js,ts,jsx,tsx}": "pnpm run lint:fix"
